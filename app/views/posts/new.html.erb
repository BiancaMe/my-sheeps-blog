<section>
    <h3>Write a new Post</h3>
    <%= form_with model: @posts, url: user_posts_path(current_user), method: :post, local: true, scope: :post do |form| %>
      <div class='form'>
        <%= form.text_field :title, class: 'title', placeholder: 'Post Title' %>
        <%= form.text_area :text, class: 'text', placeholder: 'Your Post', size: "60x10" %>
        <%= form.submit 'Post', class: 'form_btn' %>
      </div>
    <% end %>

</section>