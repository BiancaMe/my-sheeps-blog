<h1>Profile </h1>

<div>
  <div>
    <img src="<%= @user.photo %>" />
  </div>
  <div >
    <div><%= @user.name %></div>
  </div>
  <div >
    <div>Number of posts: <%= @user.posts_counter || 0 %></div>
  </div>
  <div>
    <h2 >Bio</h2>
    <div> <%= @user.bio %> </div>
  </div>
  <ul>
  <% @user.recents.each do |post| %>
    <li> 
    <%= link_to user_post_path(@user.id, post.id) do %>
        <h2><%= post.title %></h2>
      <% end %>
      <p><%= post.text %></p>
      <div >
        <span>Comments: <%= post.comments_counter || 0 %> </span>
        <span> Likes: <%= post.likes_counter || 0 %></span>
      </div>
    </li>
  <% end %>
  </ul>
  <div >
  <%= link_to user_posts_path(@user.id) do %>
   See all posts
  <% end %>
  </div>

  </div>
</div>
