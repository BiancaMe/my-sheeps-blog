<section id= "users">
  <h1>Users</h1>

  <ul class="users-list">
    <% @users.each do |user| %>
        <%= link_to user_path(user.id) do %>
        <li class="user-item">
            <div class = "user-img-container">
            <img src="<%= user.photo %>" />
            </div>
            <div class = "user-info">
                <div class = "user-name-container"><h3><%=user.name %><h3></div>
                <div class = "user-cont-container">Number of posts: <%= user.posts_counter || 0 %></div>
            </div>
        </li>
        <% end %>
    <% end %>
  </ul>
</section>