<h1>List of Users </h1>

<section id= "users">
<% @users.each do |user| %>
    <%= link_to user_path(user.id) do %>
    <li class="user-item">
        <div class = "user-img-container">
          <img src="<%= user.photo %>" />
        </div>
        <div class = "user-info">
            <div class = "user-name-container"><%=user.name %></div>
            <div class = "user-cont-container">Number of posts: <%= user.posts_counter || 0 %></div>
        </div>
    </li>
    <% end %>
<% end %>
</section>